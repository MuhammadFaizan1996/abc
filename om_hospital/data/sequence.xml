<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sequences for hospital.patient -->
        <record id="seq_hospital_patient" model="ir.sequence">
            <field name="name">Patient Sequence</field>
            <field name="code">hospital.patient.sequence</field>
<!--            <field name="prefix">HPCSH1/%(year)s/%(month)s/%(day)s/%(doy)s/%(woy)s/%(weekday)s/%(h24)s/%(h12)s/%(min)s/%(sec)s/</field>-->
            <field name="prefix">HP/</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

         <!-- Sequences for hospital.appointments -->
        <record id="seq_patient_appointment" model="ir.sequence">
            <field name="name">Appointment Sequence</field>
            <field name="code">hospital.appointment.sequence</field>
            <field name="prefix">AP/</field>
            <field name="padding">3</field>
            <field name="appointment_id" eval="False"/>
        </record>

    </data>
</odoo>
